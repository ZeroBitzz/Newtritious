<div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">username:</label>
        <input
          class="form-input username-signup"
          type="text"
          id="username-signup"
        />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
<div>
  <label for="allergies">
    Do you have any allergies?
    <select name="allergies" id="allergies" multiple > 
      {{#each allergies as |allergy|}}
      <option value="{{allergy}}">
        
      </option> 
      {{/each}}
      <option value="no">No</option>
    </select>
  </label>
</div>
<div>
  <label for="diet">
    Are you on a specific diet?
    <select name="diet" id="diet" multiple>
      {{#each diet}}
      <option value="{{diet}}"></option>
      {{/each}}
      <option value="no">No</option>
    </select>
  </label>
</div>
<div>
  <label for="cuisine">
    What are your favorite types of cuisine?
    <select name="cuisine" id="cuisine" multiple>
      {{#each cuisine}}
      <option value="{{cuisine}}"></option>
      {{/each}}
    </select>
  </label>
</div>




      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>